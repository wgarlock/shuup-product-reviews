{% extends "shuup/front/dashboard/dashboard_base.jinja" %}
{% from "shuup_product_reviews/macros.jinja" import render_reviews_table with context %}

{% block dashboard_item_content %}
    {% if reviews %}
        <h3>{{ _("Last reviews") }}</h3>
         <div class="table-responsive">
            {{ render_reviews_table(reviews) }}
        </div>
    {% else %}
        <p id="no-reviews-found" class="lead">
            <i class="fa fa-info-circle text-info"></i> {% trans %}You haven't made any reviews yet.{% endtrans %}
        </p>
    {% endif %}
{% endblock %}
